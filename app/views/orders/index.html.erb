<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>

      <h1>Orders</h1>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.stamp('24 Feb, 2017 @ 22:00CST') %></td>
            <td><%= order.name %></td>
            <td><%= link_to 'Show', order_path(order) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
