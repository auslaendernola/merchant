<%= simple_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :quantity %>
    <%= f.input :description %>
    <%= f.association :brand %>
    <%= f.association :category %>
    <%= f.input :avatar, as: :file %>
  </div>

  <p>
    <% if @product.avatar.exists? %>
      <%= image_tag @product.avatar.url(:thumb) %>
    <% end %>
  </p>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
